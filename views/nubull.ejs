  padding: 0 24px;
}

/* ================= GRID ================= */
.reels-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 28px;
}

/* ================= CARD ================= */
.reel-card {
  position: relative;
  border-radius: 22px;
  overflow: hidden;
  background: #000;
  cursor: pointer;
}

/* 9:16 */
.reel-card .media {
  aspect-ratio: 4 / 5  ;
  overflow: hidden;
}

/* 9:16 for reels instgram */
.reel-card .media2 {
  aspect-ratio: 9 / 16  ;
  overflow: hidden;
}


.reel-card img,
.reel-card video {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform .5s ease, filter .4s ease;
}

/* Overlay */
.reel-card .overlay {
  position: absolute;
  inset: 0;
  padding: 22px;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  gap: 8px;

  opacity: 0;
  visibility: hidden;
  transition: opacity .35s ease;
}

.reel-card.video:hover .play-icon {
  opacity: 0;
}

.play-icon {
