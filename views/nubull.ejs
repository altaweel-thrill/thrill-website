  transition: opacity .25s ease;
  pointer-events: none;
}

/* âœ… CSS HOVER ONLY (NO JS) */
.reel-card:hover .overlay {
  opacity: 1;
  visibility: visible;
}

.reel-card:hover img,
.reel-card:hover video {
  filter: brightness(0.55);
  transform: scale(1.05);
}

/* Text */
.overlay h4 {
  margin: 0;
